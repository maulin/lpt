<p>
  <strong>Version Name:</strong>
  <%=h @version.name %>
</p>
<table class="list">
  <tr>
    <th>Version</th>
    <th>Packages</th>
  </tr>
  <% @installs.each do |i| -%>
    <tr class="<%= cycle("even", "odd") -%>">
      <td><%= link_to i.name, version_path(i.name)  %></td>
      <td><%= "#{i.host_count}" %> </td>
    </tr>
  <% end -%>
</table>

<p>
  <%= link_to "View All versions", versions_path %>
</p>
