<% title @host.name %>

<h3>Host Information</h3>

<p>
  <b>Host Name:</b>
  <%= @host.name %><br />
  <b>Running Kernel:</b>
  <%= @host.running_kernel %><br />
  <%= link_to 'Scan Host for Packages', scan_host_path(@host) %>
</p>

<h3>Packages installed on this host</h3>

<%= link_to 'Edit', edit_host_path(@host) %> |
<%= link_to 'Back', hosts_path %>

<p>
  <table class="list">
    <tr>
      <th><%= sort_link @search, :packages_name, "Package", :class => "package" %></th>
      <th>Version</th>
      <th>Arch</th>
      <th>Install Date</th>
     </tr>

  <% @host.installations.each do |i| %>
    <tr class="<%= cycle("even", "odd") -%>">
      <td><%= link_to i.package, package_path(i.package) %></td>
      <td><%= i.version %></td>
      <td><%= i.arch %></td>
      <td><%= i.installed_on %></td>  
    </tr>
  <% end %>
</table>

</p>

<%= link_to 'Edit', edit_host_path(@host) %> |
<%= link_to 'Back', hosts_path %>
