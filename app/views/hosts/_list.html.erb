<div>
  <p>
  <% if hosts.size > 0 -%>
    <%= form_for @search do |f| %>
      <%= f.label "Host name" %>
      <%= f.text_field :name_contains %>
      <%= f.submit "Search"%>
    <% end -%>
  <% end -%>
  </p>
</div>

<div>
  <p>
  <% form_tag scan_hosts_path, :method => :get, :id => "select" do %>
    <%= submit_tag "Scan selected hosts" %>
    <table class="list">
      <tr>
        <th><input type="checkbox" name="host_ids[]" value="All" onClick="$$('#select input.check').each(function(box){box.checked=!box.checked})">All</th>
        <th><%= sort_link @search, :name %></th>
        <th><%= sort_link @search, :arch_name, "Arch", :class => "arch" %></th>
        <th><%= sort_link @search, :os_name, "Os", :class => "os" %></th>
      </tr>
      <% hosts.each do |host| -%>
        <tr class="<%= cycle("even", "odd") -%>">
          <td><%= check_box_tag "host_ids[]", host.id, false, :class => "check" %></td>
          <td><%=h link_to host.name, host %></td>
          <td><%=h host.arch %></td>
          <td><%=h host.os %></td>
        </tr>
      <% end -%>
    </table>
  <% end %>  
  </p>
</div>



