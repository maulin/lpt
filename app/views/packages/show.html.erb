<% title @package.name %>

<div>
  <h3><%= "#{@package}".capitalize %></h3>
  <table>
    <tr>
      <th>Version</th>
      <th>Hosts</th>
    </tr>
    <% @installs.each do |i| -%>
      <tr class="<%= cycle("even", "odd") -%>">
        <td><%= link_to(i.name, version_path(i.name)) %></td>
        <td><%= "#{i.host_count}" %> </td>
      </tr>
    <% end -%>
  </table> 
</div>
