<% title "Package" %>

<p>
  <strong>Package Name:</strong>
  <%=h @package.name %>
</p>
<table class="list">
  <tr>
    <th>Version</th>
    <th>Hosts</th>
  </tr>
  <% @installs.each do |i| -%>
    <tr class="<%= cycle("even", "odd") -%>">
      <td><%= "#{i.name}" %></td>
      <td><%= "#{i.host_count}" %> </td>
    </tr>
  <% end -%>
</table>

<p>
  <%= link_to "View All Packages", packages_path %>
</p>
