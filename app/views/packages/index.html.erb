<% title "Packages" %>
<%= form_for @search do |f| %>
  <%= f.label :name_contains %>
  <%= f.text_field :name_contains %><br />
  <%= f.submit %>
<% end -%>
<table class="list">
  <tr>
    <th>Package Name</th>
    <th>Number of hosts<th>
  </tr>
  <% @packages.each do |p| %>
    <tr class="<%= cycle("even", "odd") -%>">
      <td><%= link_to p.name, p %></td>
      <td><%= p.host_count %></td>
    </tr>
  <% end %>
</table>
