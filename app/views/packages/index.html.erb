<% title "Package List" %><br />

<%= form_for @search do |f| %>
  <%= f.label "Package =" %>
  <%= f.text_field :name_equals %><br />
  Or<br />
  <%= f.label "Package ~=" %>
  <%= f.text_field :name_contains %>
  <%= f.submit "Search"%>
<% end -%>

<table class="list">
  <tr>
    <th><%= sort_link @search, :name, "Package Name" %></th>
    <th>Number of Hosts<th>
  </tr>
  <% @packages.each do |p| %>
    <tr class="<%= cycle("even", "odd") -%>">
      <td><%= link_to p.name, package_path(p.name) %></td>
      <td><%= p.host_count %></td>
    </tr>
  <% end %>
</table>
