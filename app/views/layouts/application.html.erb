<!DOCTYPE html>
<html>
<head>
  <title><%= h(yield(:title) || "Pipman") %></title>
  <% unless flash[:notice].blank? %>
    <div id="notification"><%= flash[:notice] %></div>
  <% end %>
  <%= yield(:head) %>
  <%= javascript_include_tag :defaults, :cache => true %>
  <%= stylesheet_link_tag :all %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div id="header">
    <div class="title">
      <center>Pipman</center>
    </div>
    <%= render :partial => "home/menu" -%>
  </div>
  
  <% unless flash[:notice].blank? %>
    <div id="notification"><%= flash[:notice] %></div>
  <% end %>  

  <%= yield %>

</body>
</html>
